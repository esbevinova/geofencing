<div class = "addGeofenceBox">
  <h1>Add Geofence</h1>
  <div class = "addGeofenceForm">
    <form id="addGeofence-form" method="post" action="/addGeofence">

      <div class="form-GeoName">
          <label for="geofenceName">Enter Geofence Name:</label>
          <input type="text" class="form-control" id="geofenceName" name="geofenceName" placeholder="Enter Text" required>
        </div>
        <div class="usererror" id="usererror" hidden></div>

    <div class="form-address">
          <label for="geofenceAddress">Enter Address:</label>
          <input type="text" class="form-control" id="geofenceAddress" name="geofenceAddress" placeholder="Enter Text" required>
        </div>
        <div class="Addresserror" id="Addresserror" hidden></div>

    <div class="form-radius">
          <label for="radius">Enter Radius (in feet):</label>
          <input type="number" class="form-control" id="radius" name="radius" placeholder="Enter Radius" required>
        </div>
        <div class="radiuserror" id="radiuserror" hidden></div>
    <div class="form-group">
            <button type="submit" class="btn-submit" id = "submitbutton">Create Geofence</button>
        </div>
    </form>
  </div>

</div>

